<%- partial('../backend/inc/functions') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <!-- end meta -->
    <link rel="stylesheet" type="text/css" href="<%= get_base_url_admin() %>/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="<%= get_base_url_admin() %>/css/master.css">
    <link rel="stylesheet" type="text/css" href="<%= get_base_url_admin() %>/css/font-awesome.min.css">
    <link rel="shortcut icon" href="<%= get_base_url_admin() %>/images/favicon.ico" type="image/x-icon">

    <!-- end style -->

    <!-- jquery -->
    <script src="<%= get_base_url_admin() %>/js/jquery.min.js"></script> 
</head>
<body>
    

<div class="container-fluid">

            <% if(req.session.me) {
            var data_user_session = JSON.parse(req.session.me);
            if(data_user_session!=null && data_user_session.length > 0) {
            data_user_session.forEach(function(index_session){ %>
            
                <h1>Xin chào <% if (index_session.username) { %><%= index_session.username %><% } %></h1>


             

               <hr>

               <div class="rows">
                <form action="<%= get_base_url_admin() %>/word/insert" method="POST" id="form_create">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label col-sm-3">Kanji</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="kanji" id="kanji" autocomplete="off">
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3">Hiragana</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="hiragana" id="hiragana" autocomplete="off">
                                        <span class="input-group-btn">
                                            <button class="btn btn-danger btn_del_hiragana" type="button">
                                                <i class="fa fa-minus-circle" aria-hidden="true"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3">Katakana</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="katakana" id="katakana" autocomplete="off">
                                        <span class="input-group-btn">
                                            <button class="btn btn-danger btn_del_katakana" type="button">
                                                <i class="fa fa-minus-circle" aria-hidden="true"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            
                            <hr>
                            
                           
               
                </div>
                
                <div class="clearfix"></div>
                <div class="col-xs-12">
                    <hr>
                </div>

                <input type="hidden" class="form-control" name="user_ip" id="user_ip" autocomplete="off">
                <div class="col-xs-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o" aria-hidden="true"></i> Lưu lại</button>
                    <a href="javascript:void(0)" class="btn btn-default" id="btn_cancel">
                        <i class="fa fa-ban" aria-hidden="true"></i> Hủy</a>
                </div>
                </div>
                </form>
            </div>

            <% })} } else { %>
                

<section id="wrapper_login">
            <div class="container">
                <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-8 col-md-offset-2 ">
                    <div class="panel panel-primary">
                        <div class="panel-heading ">
                            <div class="panel-title">
                                <i class="fa fa-sign-in" aria-hidden="true"></i> &nbsp;Đăng nhập
                            </div>
                            <div style="float:right; font-size: 12px; position: relative; top:-20px">
                                <a href="#" style="color: #fff;">Quên mật khẩu?</a>
                            </div>
                        </div>
                        <div style="padding:30px;padding-bottom:10px;" class="panel-body">
                            <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                            <form id="loginform" class="form-horizontal" role="form" method="POST" action="/backend/">
                                <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user" aria-hidden="true"></i>
                                    </span>
                                    <input id="username" type="text" class="form-control" name="username" value="" placeholder="Nhập tài khoản hoặc Outlook Mail"
                                        required>
                                </div>
                                <div style="margin-bottom: 15px" class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-key" aria-hidden="true"></i>
                                    </span>
                                    <input id="password" type="password" class="form-control" name="password" placeholder="Nhập mật khẩu" required>
                                </div>
                                
                                        <div class="input-group">
                                            <div class="checkbox">
                                                <label>
                                                    <input id="remember" type="checkbox" name="remember"> Nhớ tài khoản
                                                </label>
                                            </div>
                                        </div>
                                        <div style="margin-top:10px" class="form-group">
                                            <!-- Button -->
                                            <div class="col-sm-12 controls">
                                                <button id="btn-login" type="submit" class="btn btn-info">Đăng nhập </button>
                                                
                                            </div>
                                        </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>


                <% } %>



        </div>
                <script type="text/javascript" src="<%= get_base_url_admin() %>/js/sails.io.js"></script> 
<script src="<%= get_base_url_admin() %>/js/bootstrap.min.js"></script> 
<script src="<%= get_base_url_admin() %>/js/scripts.js"></script> 
</body>
</html>