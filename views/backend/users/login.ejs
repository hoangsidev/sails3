<%- partial('../inc/functions') %>
    <!DOCTYPE html>
    <html lang="ja">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <!-- end meta -->
        <link rel="stylesheet" type="text/css" href="<%= get_base_url_admin() %>/css/bootstrap.min.css">
        <!-- <link rel="stylesheet" type="text/css" href="<%= get_base_url_admin() %>/css/master.css"> -->
        <link rel="stylesheet" type="text/css" href="<%= get_base_url_admin() %>/css/font-awesome.min.css">
        <link rel="shortcut icon" href="<%= get_base_url_admin() %>/images/favicon.ico" type="image/x-icon">
        <style>
            html,
            body {
                height: 100%;
                background: #222;
            }

            #wrapper_login {
                top: 45%;
                position: relative;

                -webkit-transform: translateY(-50%);
                -ms-transform: translateY(-50%);
                transform: translateY(-50%);
            }

            #loginform input {
                padding-top: 18px;
                padding-bottom: 18px;
            }

            .mainbox {
                padding: 0 65px;
            }
        </style>
        <!-- end style -->
        <!-- jquery -->
        <script src="<%= get_base_url_admin() %>/js/jquery.min.js"></script>
        <!-- end jquery -->
        <title>Đăng nhập quản trị</title>
    </head>

    <body>
        <section id="wrapper_login">
            <div class="container">
                <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-8 col-md-offset-2 ">
                    <div class="panel panel-primary">
                        <div class="panel-heading ">
                            <div class="panel-title">
                                <i class="fa fa-sign-in" aria-hidden="true"></i> &nbsp;Đăng nhập
                            </div>
                            <div style="float:right; font-size: 12px; position: relative; top:-20px">
                                <a href="#" style="color: #fff;">Quên mật khẩu?</a>
                            </div>
                        </div>
                        <div style="padding:30px;padding-bottom:10px;" class="panel-body">
                            <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                            <form id="loginform" class="form-horizontal" role="form" method="POST">
                                <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user" aria-hidden="true"></i>
                                    </span>
                                    <input id="username" type="text" class="form-control" name="username" value="" placeholder="Nhập tài khoản hoặc Outlook Mail"
                                        required>
                                </div>
                                <div style="margin-bottom: 15px" class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-key" aria-hidden="true"></i>
                                    </span>
                                    <input id="password" type="password" class="form-control" name="password" placeholder="Nhập mật khẩu" required>
                                </div>
                                <% if(error_message!=null) { %>
                                    <div class="alert alert-danger" style="padding-bottom: 5px; padding-top: 5px;">
                                        <%- error_message %>
                                    </div>
                                    <% } %>
                                        <div class="input-group">
                                            <div class="checkbox">
                                                <label>
                                                    <input id="remember" type="checkbox" name="remember"> Nhớ tài khoản
                                                </label>
                                            </div>
                                        </div>
                                        <div style="margin-top:10px" class="form-group">
                                            <!-- Button -->
                                            <div class="col-sm-12 controls">
                                                <button id="btn-login" type="submit" class="btn btn-info">Đăng nhập </button>
                                                <a id="btn-fblogin" href="#" class="btn btn-danger" onclick="return confirm('Chức năng này đang được cập nhật!')">Đăng nhập với Outlook Mail</a>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-12 control">
                                                <div style="border-top: 1px solid#888; padding-top:15px;">
                                                    Bạn chưa có tài khoản ?
                                                    <a href="#">
                                                        Đăng ký ở đây
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- end -->
        <script src="<%= get_base_url_admin() %>/js/bootstrap.min.js"></script>
        <script src="<%= get_base_url_admin() %>/js/scripts.js"></script>
        <script>
            $(document).ready(function () {
                $('#username').focus();
            });
        </script>
    </body>

    </html>