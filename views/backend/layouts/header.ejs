<%- partial('../inc/functions') %>
<!DOCTYPE html>
<html lang="ja">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- end meta -->
    <link rel="stylesheet" type="text/css" href="<%= get_base_url_admin() %>/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="<%= get_base_url_admin() %>/css/master.css">
    <link rel="stylesheet" type="text/css" href="<%= get_base_url_admin() %>/css/font-awesome.min.css">
    <link rel="shortcut icon" href="<%= get_base_url_admin() %>/images/favicon.ico" type="image/x-icon">

    <!-- end style -->

    <!-- jquery -->
    <script src="<%= get_base_url_admin() %>/js/jquery.min.js"></script> 
    <!-- end jquery -->
    <title><% if(page_title) { %><%= page_title %><% } %></title>
</head>

<body>
    <header id="wrapper_header">
        <form action="<%= get_base_url_admin() %>/word/search" method="get" class="wrap_search">
            <input type="text" id="s" name="s" value="" autocomplete="off" placeholder="Nhập từ khóa tìm kiếm...">
            <button type="submit" id="submit_s" class="hover_opacity"><i class="fa fa-search" aria-hidden="true"></i></button>
        </form>
        <!-- <label class="label label-danger"><%= sails.helpers.backend.globals %></label> -->

        <% if(req.session.me) {
        var data_user_session = JSON.parse(req.session.me);
        if(data_user_session!=null && data_user_session.length > 0) {
        data_user_session.forEach(function(index_session){ %>
        <ul class="nav navbar-nav navbar-right wrap_me">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <%- get_role(index_session.role) %> &nbsp;<% if (index_session.display_name) { %><%= index_session.display_name %><% } %> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="<%= get_base_url_admin() %>/user/edit/<% if (index_session.id) { %><%= index_session.id %><% } %>">Thông tin tài khoản</a></li>
                <li><a href="#">Đổi mật khẩu</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="<%= get_base_url_admin() %>/logout"  onClick="return confirm('Bạn chắc chắn đăng xuất?')">Đăng xuất</a></li>
              </ul>
            </li>
          </ul>
            <% })} else { %>
              chua dang nhap
           <% } } %>
    </header>
    <!-- end header -->

  
   

    